<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.SignUpFragment"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/new_account_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:text="@string/new_account"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/geometria_medium"
        android:textSize="19sp"
        android:layout_gravity="center"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/new_account_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_top_radius_light">

            <TextView
                android:id="@+id/input_full_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/geometria_actual"
                android:layout_marginStart="37dp"
                android:layout_marginTop="43dp"
                android:text="@string/username_text"
                android:textColor="#3B3A39"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/full_name_edit_text"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@+id/input_full_name_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/edit_text_locked"
                android:layout_marginTop="9dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:fontFamily="@font/geometria_medium"
                android:textSize="21sp"
                android:textColor="@color/colorBlack"
                android:autofillHints="@string/username_hint"
                android:inputType="textPersonName"
                android:hint="@string/username_hint"
                android:textColorHint="@color/colorLightGrey" />

            <TextView
                android:id="@+id/input_phone_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/full_name_edit_text"
                app:layout_constraintStart_toStartOf="@id/input_full_name_text_view"
                android:fontFamily="@font/geometria_actual"
                android:layout_marginTop="29dp"
                android:text="@string/input_phone"
                android:textColor="#3B3A39"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/phone_number_edit_text"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@+id/input_phone_text_view"
                app:layout_constraintStart_toStartOf="@id/full_name_edit_text"
                app:layout_constraintEnd_toEndOf="@id/full_name_edit_text"
                android:background="@drawable/edit_text_locked"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/geometria_medium"
                android:textSize="21sp"
                android:textColor="@color/colorBlack"
                android:autofillHints="@string/input_phone"
                android:inputType="phone"
                android:hint="@string/phone_hint_uz"
                android:maxLength="16"
                android:textColorHint="@color/colorLightGrey"
                android:drawableStart="@drawable/ic_uzbekistan"
                android:drawablePadding="11dp"
                android:letterSpacing="0.25"
                android:paddingStart="17dp"
                android:paddingEnd="17dp"/>

            <TextView
                android:id="@+id/password_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/phone_number_edit_text"
                app:layout_constraintStart_toStartOf="@id/input_full_name_text_view"
                android:layout_marginTop="29dp"
                android:text="@string/password_text"
                android:fontFamily="@font/geometria_actual"
                android:textColor="#3B3A39"
                android:textSize="15sp"/>

            <RelativeLayout
                android:id="@+id/password_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/full_name_edit_text"
                app:layout_constraintStart_toStartOf="@id/full_name_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/password_text_view"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:autofillHints="@string/password"
                    android:background="@drawable/edit_text_locked"
                    android:fontFamily="@font/geometria_medium"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp"
                    android:textColor="@color/colorBlack"
                    android:letterSpacing="0.25"
                    android:textColorHint="@color/colorLightGrey"
                    android:textSize="21sp" />

                <ImageView
                    android:id="@+id/password_eye_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/password_edit_text"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="7dp"
                    android:padding="15dp"
                    android:contentDescription="@string/password"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/repeat_password_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/password_field"
                app:layout_constraintStart_toStartOf="@id/input_full_name_text_view"
                android:layout_marginTop="29dp"
                android:text="@string/repeat_password_text"
                android:fontFamily="@font/geometria_actual"
                android:textColor="#3B3A39"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/password_repeated_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/repeat_password_text_view"
                app:layout_constraintStart_toStartOf="@id/full_name_edit_text"
                app:layout_constraintEnd_toEndOf="@id/full_name_edit_text"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/password_repeated_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:autofillHints="@string/password"
                    android:background="@drawable/edit_text_locked"
                    android:fontFamily="@font/geometria_medium"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorLightGrey"
                    android:textSize="21sp"/>

                <ImageView
                    android:id="@+id/password_repeated_eye_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/password_repeated_edit_text"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="7dp"
                    android:padding="15dp"
                    android:contentDescription="@string/password"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/user_agreement_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/sign_up_button"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:text="@string/user_agreement"
                android:fontFamily="@font/geometria_actual"
                android:textColor="#3B3A39"
                android:textSize="13sp"
                android:lineSpacingExtra="7dp"/>

            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:layout_constraintTop_toBottomOf="@id/password_repeated_field"
                app:layout_constraintEnd_toStartOf="@id/card_layout"
                app:layout_constraintEnd_toEndOf="@id/card_layout"
                app:layout_constraintBottom_toBottomOf="@id/card_layout"
                android:background="@drawable/btn_purple"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="190dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>