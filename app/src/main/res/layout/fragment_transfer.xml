<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.TransferFragment"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/transfer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:text="@string/transfer"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/geometria_medium"
        android:textSize="19sp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/back_arrow_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_layout"
        app:layout_constraintDimensionRatio="H, 1:1"
        android:src="@drawable/ic_back_vector"
        android:scaleType="fitCenter"
        android:padding="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/transfer"/>

    <View
        android:id="@+id/card_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/transfer_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_top_radius_light" />

    <TextView
        android:id="@+id/accessible_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/card_layout"
        app:layout_constraintStart_toStartOf="@id/card_layout"
        app:layout_constraintEnd_toEndOf="@id/card_layout"
        android:layout_marginTop="42dp"
        android:text="@string/accessible"
        android:gravity="center"
        android:fontFamily="@font/geometria_actual"
        android:textColor="#3B3A39"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/accessible_number_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accessible_text_view"
        android:layout_marginTop="7dp"
        android:textColor="#3B3A39"
        android:gravity="center"
        android:fontFamily="@font/geometria_bold"
        android:textSize="27sp"
        android:text="@string/current_balance"/>

    <TextView
        android:id="@+id/sender_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/accessible_number_text_view"
        app:layout_constraintStart_toStartOf="@id/card_layout"
        app:layout_constraintEnd_toEndOf="@id/card_layout"
        android:layout_marginStart="37dp"
        android:layout_marginTop="39dp"
        android:text="@string/sender"
        android:fontFamily="@font/geometria_actual"
        android:textColor="#3B3A39"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/sender_edit_text"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/sender_text_view"
        app:layout_constraintStart_toStartOf="@id/card_layout"
        app:layout_constraintEnd_toEndOf="@id/card_layout"
        android:background="@drawable/edit_text_locked"
        android:layout_marginTop="13dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/geometria_medium"
        android:textSize="21sp"
        android:textColor="#3B3A39"
        android:autofillHints="@string/input_phone"
        android:inputType="textPersonName"
        android:hint="@string/fullname_or_id"
        android:maxLength="15"
        android:textColorHint="#DBDCEA"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"/>

    <TextView
        android:id="@+id/sum_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sender_edit_text"
        app:layout_constraintStart_toStartOf="@id/card_layout"
        app:layout_constraintEnd_toEndOf="@id/card_layout"
        android:layout_marginStart="37dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/geometria_actual"
        android:text="@string/amount"
        android:textColor="#3B3A39"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/sum_edit_text"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/sum_text_view"
        app:layout_constraintStart_toStartOf="@id/card_layout"
        app:layout_constraintEnd_toEndOf="@id/card_layout"
        android:background="@drawable/edit_text_locked"
        android:layout_marginTop="13dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:fontFamily="@font/geometria_medium"
        android:textSize="21sp"
        android:textColor="#3B3A39"
        android:autofillHints="@string/password"
        android:inputType="numberDecimal"
        android:hint="@string/zero"
        android:textColorHint="#DBDCEA"/>

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/transfer_btn"
        android:layout_width="0dp"
        android:layout_height="65dp"
        app:layout_constraintStart_toStartOf="@id/card_layout"
        app:layout_constraintEnd_toEndOf="@id/card_layout"
        app:layout_constraintBottom_toBottomOf="@id/card_layout"
        android:background="@drawable/btn_purple"
        android:text="@string/send"
        android:textAllCaps="false"
        android:fontFamily="@font/geometria_medium"
        android:textColor="#fff"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:elevation="2dp"
        app:spinning_bar_color="@color/colorWhite"
        app:spinning_bar_padding="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>