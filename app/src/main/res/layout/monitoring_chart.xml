    <TextView
        android:id="@+id/month_income_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginStart="28dp"
        android:textSize="13sp"
        android:fontFamily="@font/geometria_medium"
        android:textColor="#FFF"
        android:text="@string/income_may"/>

    <ImageView
        android:id="@+id/close_chart_image_view"
        android:layout_width="0dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="@id/month_income_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/month_income_text_view"
        app:layout_constraintStart_toEndOf="@id/month_income_text_view"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/income_may"/>

    <TextView
        android:id="@+id/month_income_summary_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/month_income_text_view"
        app:layout_constraintEnd_toStartOf="@id/minimize_chart_image_view"
        android:textSize="13sp"
        android:fontFamily="@font/geometria_medium"
        android:textColor="#FFF"
        android:text="@string/profit_summary"/>

    <ImageView
        android:id="@+id/minimize_chart_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/month_income_text_view"
        app:layout_constraintBottom_toBottomOf="@id/month_income_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="28dp"
        android:padding="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_minimize"
        android:contentDescription="@string/income_may"/>

    <ImageView
        android:id="@+id/chart_image_view"
        android:layout_width="0dp"
        android:layout_height="192dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/prev_chart_image_view"
        app:layout_constraintEnd_toStartOf="@id/next_chart_image_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="112dp"
        android:src="@drawable/chart"
        android:contentDescription="@string/income_may"/>

    <ImageView
        android:id="@+id/prev_chart_image_view"
        android:layout_width="0dp"
        android:layout_height="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/chart_image_view"
        app:layout_constraintBottom_toBottomOf="@id/chart_image_view"
        android:layout_marginStart="28dp"
        android:src="@drawable/ic_prev"
        android:contentDescription="@string/income_may"
        style="@style/TextAppearance.AppCompat.Button"/>

    <ImageView
        android:id="@+id/next_chart_image_view"
        android:layout_width="0dp"
        android:layout_height="13dp"
        app:layout_constraintTop_toTopOf="@id/chart_image_view"
        app:layout_constraintBottom_toBottomOf="@id/chart_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="28dp"
        android:src="@drawable/ic_next"
        android:contentDescription="@string/income_may"/>

    <TextView
        android:id="@+id/received_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/bonus_text_view"
        app:layout_constraintBottom_toTopOf="@id/bonus_text_view"
        android:layout_marginBottom="15dp"
        android:paddingHorizontal="14dp"
        android:textColor="#545351"
        android:textSize="12sp"
        android:text="@string/received_200"
        android:background="@drawable/text_wrap_white"/>

    <TextView
        android:id="@+id/debited_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/received_text_view"
        app:layout_constraintTop_toTopOf="@id/received_text_view"
        app:layout_constraintBottom_toBottomOf="@id/received_text_view"
        android:layout_marginStart="14dp"
        android:paddingHorizontal="14dp"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:text="@string/debit_200"
        android:background="@drawable/text_wrap_grey"/>

    <TextView
        android:id="@+id/bonus_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/month_income_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="14dp"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:text="@string/bonus_200"
        android:background="@drawable/text_wrap_orange"
        android:layout_marginBottom="27dp" />

</androidx.constraintlayout.widget.ConstraintLayout>