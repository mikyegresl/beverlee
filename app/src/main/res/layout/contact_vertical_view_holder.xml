<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/view_holder_layout"
    android:background="#FFF"
    android:layout_marginTop="14dp">

    <ImageView
        android:id="@+id/contact_avatar"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_grey"
        android:elevation="8dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="38dp"
        android:contentDescription="@string/contact_name" />

    <ImageView
        android:id="@+id/check_image_view"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/ic_check"
        android:layout_alignEnd="@id/contact_avatar"
        android:layout_alignBottom="@id/contact_avatar"
        android:layout_marginEnd="-4dp"
        android:elevation="8dp"
        android:contentDescription="@string/card"/>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/contact_avatar"
        android:layout_centerVertical="true"
        android:layout_marginStart="52dp"
        android:textColor="#3B3A39"
        android:textSize="16sp"
        android:fontFamily="@font/geometria_medium"
        android:text="@string/contact_name_1" />

    <ImageView
        android:id="@+id/star_img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/contact_name"
        android:layout_alignBottom="@id/contact_name"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="31dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_star_yellow"
        android:contentDescription="@string/add_to_favorites"
        android:visibility="invisible"/>

    <View
        android:id="@+id/stroke_text_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/contact_avatar"
        android:background="#EBEBEB"
        android:layout_marginHorizontal="21dp" />

</RelativeLayout>