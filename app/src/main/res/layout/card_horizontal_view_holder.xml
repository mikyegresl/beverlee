<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/credit_card_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/credit_card"
        android:layout_width="288dp"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_card_layout"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/card_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/card"
            android:fontFamily="@font/geometria_actual"
            android:textColor="#D6D6D6"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/card_chip"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/card_text_view"
            app:layout_constraintEnd_toEndOf="@id/card_text_view"
            app:layout_constraintTop_toBottomOf="@id/card_text_view"
            app:layout_constraintDimensionRatio="H,12:9"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_card_chip"
            android:contentDescription="@string/master_card_name"/>

        <ImageView
            android:id="@+id/card_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/card_text_view"
            app:layout_constraintBottom_toTopOf="@id/card_chip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="V,14:9"
            android:scaleType="fitXY"
            android:layout_marginEnd="17dp"
            android:src="@drawable/ic_master_card_logo"
            android:contentDescription="@string/master_card_name"/>

        <TextView
            android:id="@+id/card_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_chip"
            app:layout_constraintStart_toStartOf="@id/card_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:textSize="19sp"
            android:letterSpacing="0.05"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/card_no"
            android:maxLines="1"
            android:textColor="#D6D6D6" />

        <TextView
            android:id="@+id/card_exp_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_no"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:textSize="14sp"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/card_expiration_date"
            android:textColor="#D6D6D6"/>

        <TextView
            android:id="@+id/card_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_exp_date"
            app:layout_constraintStart_toStartOf="@id/card_no"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/card_username"
            android:textColor="#D6D6D6" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/check_image_view"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/ic_check"
        android:layout_alignEnd="@id/credit_card"
        android:layout_alignBottom="@id/credit_card"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="-11dp"
        android:contentDescription="@string/card"/>

</RelativeLayout>