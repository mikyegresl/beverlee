<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_holder">

    <View
        android:id="@+id/credit_card_layout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_card_layout"
        android:layout_marginTop="42dp"
        android:layout_marginHorizontal="44dp"/>

    <TextView
        android:id="@+id/card_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/credit_card_layout"
        android:layout_alignEnd="@id/credit_card_layout"
        android:layout_alignBottom="@id/credit_card_layout"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="70dp"
        android:textSize="18sp"
        android:fontFamily="@font/geometria_actual"
        android:text="@string/card_no"
        android:maxLines="1"
        android:textColor="#D6D6D6" />

    <TextView
        android:id="@+id/card_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/credit_card_layout"
        android:layout_alignStart="@id/card_no"
        android:layout_marginTop="20.5dp"
        android:text="@string/card"
        android:fontFamily="@font/geometria_actual"
        android:textColor="#D6D6D6"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/card_chip"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_below="@id/card_text_view"
        android:layout_alignStart="@id/card_no"
        android:src="@drawable/ic_card_chip"
        android:contentDescription="@string/master_card_name"/>

    <ImageView
        android:id="@+id/card_logo"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignTop="@id/card_text_view"
        android:layout_alignEnd="@id/credit_card_layout"
        android:layout_alignStart="@id/card_exp_date"
        android:layout_marginEnd="17dp"
        android:src="@drawable/ic_master_card_logo"
        android:scaleType="fitCenter"
        android:contentDescription="@string/master_card_name"/>

    <TextView
        android:id="@+id/card_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/credit_card_layout"
        android:layout_marginBottom="29dp"
        android:layout_alignStart="@id/card_no"
        android:textSize="15sp"
        android:fontFamily="@font/geometria_actual"
        android:text="@string/card_username"
        android:textColor="#D6D6D6" />

    <TextView
        android:id="@+id/card_exp_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/card_no"
        android:layout_above="@id/card_username"
        android:textSize="15sp"
        android:fontFamily="@font/geometria_actual"
        android:text="@string/card_expiration_date"
        android:textColor="#D6D6D6"/>

    <ImageView
        android:id="@+id/check_image_view"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/ic_check"
        android:layout_alignEnd="@id/credit_card_layout"
        android:layout_alignTop="@id/card_exp_date"
        android:layout_marginEnd="-11dp"
        android:contentDescription="@string/card"/>

</RelativeLayout>