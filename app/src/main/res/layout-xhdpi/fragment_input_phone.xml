<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.InputPhoneFragment"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sign_in_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/card_layout"
        android:layout_marginTop="30dp"
        android:text="@string/signing"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/geometria_medium"
        android:textSize="14sp"
        android:gravity="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="21dp"
        android:background="@drawable/card_top_radius_light">

        <TextView
            android:id="@+id/input_phone_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/card_layout"
            app:layout_constraintStart_toStartOf="@id/card_layout"
            app:layout_constraintEnd_toEndOf="@id/card_layout"
            android:layout_marginStart="26dp"
            android:layout_marginTop="30dp"
            android:text="@string/input_phone"
            android:fontFamily="@font/geometria_actual"
            android:textColor="#3B3A39"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/phone_edit_text"
            android:layout_width="0dp"
            android:layout_height="46dp"
            app:layout_constraintTop_toBottomOf="@+id/input_phone_text_view"
            app:layout_constraintStart_toStartOf="@id/card_layout"
            app:layout_constraintEnd_toEndOf="@id/card_layout"
            android:background="@drawable/edit_text_locked"
            android:layout_marginTop="9dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/geometria_medium"
            android:textSize="15sp"
            android:textColor="#3B3A39"
            android:autofillHints="@string/phone_hint_uz"
            android:inputType="phone"
            android:hint="@string/phone_hint"
            android:maxLength="16"
            android:textColorHint="#DBDCEA"
            android:drawableStart="@drawable/ic_uzbekistan"
            android:drawablePadding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <TextView
            android:id="@+id/password_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/phone_edit_text"
            app:layout_constraintStart_toStartOf="@id/card_layout"
            app:layout_constraintEnd_toEndOf="@id/card_layout"
            android:layout_marginStart="26dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/password"
            android:textColor="#3B3A39"
            android:textSize="11sp"/>

        <RelativeLayout
            android:id="@+id/password_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/phone_edit_text"
            app:layout_constraintStart_toStartOf="@id/phone_edit_text"
            app:layout_constraintTop_toBottomOf="@+id/password_text_view"
            android:layout_marginTop="13dp">

            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:autofillHints="@string/password"
                android:background="@drawable/edit_text_locked"
                android:fontFamily="@font/geometria_medium"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorLightGrey"
                android:letterSpacing="0.25"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/password_eye_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/password_edit_text"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_eye"
                android:scaleType="fitCenter"
                android:layout_marginEnd="5dp"
                android:padding="11dp"
                android:contentDescription="@string/password"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/forgot_password_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/password_field"
            app:layout_constraintStart_toStartOf="@id/card_layout"
            app:layout_constraintEnd_toEndOf="@id/card_layout"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:text="@string/forgot_password"
            android:fontFamily="@font/geometria_medium"
            android:textColor="#3B3A39"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="0dp"
            android:layout_height="46dp"
            app:layout_constraintStart_toStartOf="@id/card_layout"
            app:layout_constraintEnd_toEndOf="@id/card_layout"
            app:layout_constraintBottom_toBottomOf="@id/card_layout"
            android:background="@drawable/btn_purple"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:fontFamily="@font/geometria_medium"
            android:textColor="#fff"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="36dp"
            android:elevation="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>