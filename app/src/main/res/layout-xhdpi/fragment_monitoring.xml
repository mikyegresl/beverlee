<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_view"
    tools:context=".view.fragments.MonitoringFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragments.MonitoringFragment"
        android:background="#545351">

        <View
            android:id="@+id/monitoring_header_layout"
            android:layout_width="0dp"
            android:layout_height="171dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/monitoring_header"/>

        <TextView
            android:id="@+id/monitoring_header_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/monitoring_header_layout"
            android:layout_marginTop="28dp"
            android:textSize="13.5sp"
            android:textColor="#FFF"
            android:fontFamily="@font/geometria_medium"
            android:text="@string/monitoring_header"
            android:gravity="center"/>

        <EditText
            android:id="@+id/monitoring_search_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/monitoring_header_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/dark_search_field"
            android:hint="@string/search"
            android:textColorHint="#FFF"
            android:textSize="9sp"
            android:textColor="#FFF"
            android:maxLines="1"
            android:fontFamily="@font/geometria_light"
            android:drawableStart="@drawable/ic_loop_white"
            android:drawablePadding="8dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="21dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:inputType="text"
            android:autofillHints="@string/monitoring"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="0dp"
            android:layout_height="35.5dp"
            app:layout_constraintTop_toBottomOf="@id/monitoring_search_edit_text"
            app:layout_constraintStart_toStartOf="@id/monitoring_search_edit_text"
            app:layout_constraintEnd_toEndOf="@id/monitoring_search_edit_text"
            app:layout_constraintBottom_toBottomOf="@id/monitoring_header_layout"
            android:orientation="horizontal"
            android:checkedButton="@id/income_radio_btn"
            android:gravity="center"
            android:background="@drawable/radio_group_income">

            <RadioButton
                android:id="@+id/income_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:enabled="true"
                android:text="@string/income"
                android:textColor="#FFF"
                android:fontFamily="@font/geometria_medium"
                android:textSize="9sp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:button="@null"/>

            <RadioButton
                android:id="@+id/expenditure_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/expenditure"
                android:textColor="#8D8D8D"
                android:fontFamily="@font/geometria_medium"
                android:textSize="9sp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:button="@null"/>
        </RadioGroup>

        <View
            android:id="@+id/monitoring_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/monitoring_header_layout"
            app:layout_constraintBottom_toTopOf="@+id/calculations_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/month_income_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/monitoring_card"
            app:layout_constraintStart_toStartOf="@id/monitoring_card"
            android:layout_marginTop="19dp"
            android:layout_marginStart="20dp"
            android:textSize="9sp"
            android:fontFamily="@font/geometria_medium"
            android:textColor="#FFF"
            android:text="@string/income_may"/>

        <ImageView
            android:id="@+id/close_chart_image_view"
            android:layout_width="0dp"
            android:layout_height="13dp"
            app:layout_constraintTop_toTopOf="@id/month_income_text_view"
            app:layout_constraintBottom_toBottomOf="@+id/month_income_text_view"
            app:layout_constraintStart_toEndOf="@id/month_income_text_view"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/income_may"/>

        <TextView
            android:id="@+id/month_income_summary_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/month_income_text_view"
            app:layout_constraintEnd_toStartOf="@id/minimize_chart_image_view"
            android:textSize="9sp"
            android:fontFamily="@font/geometria_medium"
            android:textColor="#FFF"
            android:text="@string/profit_summary"/>

        <ImageView
            android:id="@+id/minimize_chart_image_view"
            android:layout_width="0dp"
            android:layout_height="5dp"
            app:layout_constraintTop_toTopOf="@id/month_income_text_view"
            app:layout_constraintBottom_toBottomOf="@id/month_income_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_minimize"
            android:contentDescription="@string/income_may"/>

        <ImageView
            android:id="@+id/chart_image_view"
            android:layout_width="0dp"
            android:layout_height="137dp"
            app:layout_constraintTop_toTopOf="@id/monitoring_card"
            app:layout_constraintStart_toEndOf="@id/prev_chart_image_view"
            app:layout_constraintEnd_toStartOf="@id/next_chart_image_view"
            app:layout_constraintBottom_toBottomOf="@id/monitoring_card"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="47dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/chart"
            android:contentDescription="@string/income_may"/>

        <ImageView
            android:id="@+id/prev_chart_image_view"
            android:layout_width="0dp"
            android:layout_height="9dp"
            app:layout_constraintStart_toStartOf="@id/monitoring_card"
            app:layout_constraintTop_toTopOf="@id/chart_image_view"
            app:layout_constraintBottom_toBottomOf="@id/chart_image_view"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_prev"
            android:contentDescription="@string/income_may"
            style="@style/TextAppearance.AppCompat.Button"/>

        <ImageView
            android:id="@+id/next_chart_image_view"
            android:layout_width="0dp"
            android:layout_height="9dp"
            app:layout_constraintTop_toTopOf="@id/chart_image_view"
            app:layout_constraintBottom_toBottomOf="@id/chart_image_view"
            app:layout_constraintEnd_toEndOf="@id/monitoring_card"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_next"
            android:contentDescription="@string/income_may"/>

        <TextView
            android:id="@+id/received_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/bonus_text_view"
            app:layout_constraintBottom_toTopOf="@id/bonus_text_view"
            android:layout_marginBottom="11dp"
            android:paddingHorizontal="10dp"
            android:textColor="#545351"
            android:textSize="8sp"
            android:text="@string/received_200"
            android:background="@drawable/text_wrap_white"/>

        <TextView
            android:id="@+id/debited_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/received_text_view"
            app:layout_constraintTop_toTopOf="@id/received_text_view"
            app:layout_constraintBottom_toBottomOf="@id/received_text_view"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="10dp"
            android:textColor="#FFF"
            android:textSize="8sp"
            android:text="@string/debit_200"
            android:background="@drawable/text_wrap_grey"/>

        <TextView
            android:id="@+id/bonus_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/month_income_text_view"
            app:layout_constraintBottom_toBottomOf="@id/monitoring_card"
            android:paddingHorizontal="10dp"
            android:textColor="#FFF"
            android:textSize="8sp"
            android:text="@string/bonus_200"
            android:background="@drawable/text_wrap_orange"
            android:layout_marginBottom="19dp" />

        <View
            android:id="@+id/calculations_layout"
            android:layout_width="0dp"
            android:layout_height="189dp"
            android:background="@drawable/card_top_radius_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="54dp"
            android:layout_marginBottom="76dp"/>

        <View
            android:id="@+id/upper_stroke"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="@id/may_12_text_view"
            app:layout_constraintBottom_toBottomOf="@id/may_12_text_view"
            app:layout_constraintStart_toEndOf="@id/may_12_text_view"
            app:layout_constraintEnd_toEndOf="@id/calculations_layout"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="21dp"
            android:background="#DEE3EE"/>

        <TextView
            android:id="@+id/may_12_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/calculations_layout"
            app:layout_constraintStart_toStartOf="@id/calculations_layout"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:textSize="9sp"
            android:fontFamily="@font/geometria_medium"
            android:textColor="#3A3A38"
            android:text="@string/may_12"/>

        <ImageView
            android:id="@+id/bonus_avatar_image_view"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:layout_constraintStart_toStartOf="@id/bonus_text_view"
            app:layout_constraintTop_toTopOf="@id/bonus_title_text_view"
            app:layout_constraintBottom_toBottomOf="@id/bonus_from_text_view"
            android:src="@drawable/ic_star"
            android:background="@drawable/grey_circle"
            android:padding="8.5dp"
            android:contentDescription="@string/monitoring"/>

        <TextView
            android:id="@+id/bonus_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/bonus_avatar_image_view"
            app:layout_constraintTop_toBottomOf="@id/upper_stroke"
            android:layout_marginTop="21dp"
            android:layout_marginStart="8.5dp"
            android:text="@string/bonus"
            android:textColor="#BCBECD"
            android:fontFamily="@font/geometria_medium"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/bonus_from_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/bonus_title_text_view"
            app:layout_constraintTop_toBottomOf="@id/bonus_title_text_view"
            android:layout_marginTop="3dp"
            android:text="@string/beverlee"
            android:textColor="#3B3A38"
            android:fontFamily="@font/geometria_medium"
            android:textStyle="bold"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/bonus_amount_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/bonus_from_text_view"
            app:layout_constraintBottom_toBottomOf="@id/bonus_from_text_view"
            app:layout_constraintEnd_toEndOf="@id/calculations_layout"
            android:text="@string/plus_500"
            android:layout_marginEnd="19dp"
            android:fontFamily="@font/geometria_medium"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textColor="#21DE7A"/>

        <!--        second view holder-->
        <ImageView
            android:id="@+id/received_avatar_image_view"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:layout_constraintStart_toStartOf="@id/bonus_avatar_image_view"
            app:layout_constraintTop_toTopOf="@id/received_title_text_view"
            app:layout_constraintBottom_toBottomOf="@id/received_from_text_view"
            android:src="@drawable/ic_vector"
            android:background="@drawable/grey_circle"
            android:padding="8.5dp"
            android:contentDescription="@string/monitoring"/>

        <TextView
            android:id="@+id/received_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/bonus_avatar_image_view"
            app:layout_constraintTop_toBottomOf="@id/bonus_from_text_view"
            android:layout_marginTop="21dp"
            android:layout_marginStart="8.5dp"
            android:text="@string/received"
            android:textColor="#BCBECD"
            android:fontFamily="@font/geometria_medium"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/received_from_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/received_title_text_view"
            app:layout_constraintTop_toBottomOf="@id/received_title_text_view"
            android:layout_marginTop="3dp"
            android:text="@string/vladislav_romanov"
            android:textColor="#3B3A38"
            android:fontFamily="@font/geometria_medium"
            android:textStyle="bold"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/received_amount_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/received_from_text_view"
            app:layout_constraintBottom_toBottomOf="@id/received_from_text_view"
            app:layout_constraintEnd_toEndOf="@id/calculations_layout"
            android:text="@string/plus_200"
            android:layout_marginEnd="19dp"
            android:fontFamily="@font/geometria_medium"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textColor="#21DE7A"/>

        <!--third view holder-->
        <ImageView
            android:id="@+id/debit_avatar_image_view"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:layout_constraintStart_toStartOf="@id/received_avatar_image_view"
            app:layout_constraintTop_toTopOf="@id/debit_title_text_view"
            app:layout_constraintBottom_toBottomOf="@id/debit_from_text_view"
            android:src="@drawable/ic_wallet"
            android:background="@drawable/grey_circle"
            android:padding="8.5dp"
            android:contentDescription="@string/monitoring"/>

        <TextView
            android:id="@+id/debit_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/debit_avatar_image_view"
            app:layout_constraintTop_toBottomOf="@id/received_from_text_view"
            android:layout_marginTop="21dp"
            android:layout_marginStart="8.5dp"
            android:text="@string/debited"
            android:textColor="#BCBECD"
            android:fontFamily="@font/geometria_medium"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/debit_from_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/debit_title_text_view"
            app:layout_constraintTop_toBottomOf="@id/debit_title_text_view"
            android:layout_marginTop="3dp"
            android:text="@string/card_number"
            android:textColor="#3B3A38"
            android:fontFamily="@font/geometria_medium"
            android:textStyle="bold"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/debit_amount_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/debit_from_text_view"
            app:layout_constraintBottom_toBottomOf="@id/debit_from_text_view"
            app:layout_constraintEnd_toEndOf="@id/calculations_layout"
            android:text="@string/plus_200"
            android:layout_marginEnd="19dp"
            android:fontFamily="@font/geometria_medium"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textColor="#21DE7A"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>