<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cards_page"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragments.MyCardsFragment"
    android:orientation="vertical">

    <View
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background"/>

    <ImageView
        android:id="@+id/plus_image_view"
        android:layout_width="0dp"
        android:layout_height="22.4dp"
        app:layout_constraintTop_toTopOf="@id/my_cards_text_view"
        app:layout_constraintBottom_toBottomOf="@id/my_cards_text_view"
        app:layout_constraintEnd_toEndOf="@id/main_layout"
        android:src="@drawable/ic_plus"
        android:contentDescription="@string/my_cards"/>

    <TextView
        android:id="@+id/my_cards_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/main_layout"
        app:layout_constraintStart_toStartOf="@id/main_layout"
        app:layout_constraintEnd_toEndOf="@id/main_layout"
        android:layout_marginTop="31.5dp"
        android:text="@string/my_cards"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/geometria_medium"
        android:textSize="19sp"
        android:gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card_list_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/my_cards_text_view"
        app:layout_constraintBottom_toBottomOf="@id/main_layout"
        app:layout_constraintStart_toStartOf="@id/main_layout"
        app:layout_constraintEnd_toEndOf="@id/main_layout"
        android:background="@drawable/card_top_radius_light"
        android:overScrollMode="never"
        android:layout_marginTop="31.5dp"
        android:paddingBottom="76dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>