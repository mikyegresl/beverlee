<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.PinFragment"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/lock_image_view"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toTopOf="@id/createPinTextView"
        app:layout_constraintStart_toStartOf="@id/twoImageView"
        app:layout_constraintEnd_toEndOf="@id/twoImageView"
        android:src="@drawable/ic_locker"
        android:contentDescription="@string/create_pin"
        android:layout_marginBottom="23dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/createPinTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="227dp"
        android:gravity="center"
        android:text="@string/create_pin"
        android:fontFamily="@font/geometria_medium"
        android:textSize="19sp"
        android:textColor="#fff" />

    <View
        android:id="@+id/pin_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/card_top_radius_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createPinTextView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/firstStartImageView"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="@id/pin_card"
        app:layout_constraintEnd_toStartOf="@id/secondStartImageView"
        app:layout_constraintTop_toTopOf="@id/pin_card"
        android:layout_marginTop="46dp"
        android:layout_marginStart="123dp"
        android:src="@drawable/ic_star_grey"
        android:contentDescription="@string/create_pin"/>

    <ImageView
        android:id="@+id/secondStartImageView"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/firstStartImageView"
        app:layout_constraintEnd_toStartOf="@id/thirdStartImageView"
        app:layout_constraintTop_toTopOf="@id/pin_card"
        android:layout_marginTop="46dp"
        android:layout_marginStart="21dp"
        android:src="@drawable/ic_star_grey"
        android:contentDescription="@string/create_pin"/>

    <ImageView
        android:id="@+id/thirdStartImageView"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/secondStartImageView"
        app:layout_constraintEnd_toStartOf="@id/forthStartImageView"
        app:layout_constraintTop_toTopOf="@id/pin_card"
        android:layout_marginTop="46dp"
        android:layout_marginStart="21dp"
        android:src="@drawable/ic_star_grey"
        android:contentDescription="@string/create_pin"/>

    <ImageView
        android:id="@+id/forthStartImageView"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/thirdStartImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pin_card"
        android:layout_marginTop="46dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="123dp"
        android:src="@drawable/ic_star_grey"
        android:contentDescription="@string/create_pin"/>

    <TextView
        android:id="@+id/oneImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/twoImageView"
        app:layout_constraintBottom_toBottomOf="@id/twoImageView"
        app:layout_constraintStart_toStartOf="@id/fourImageView"
        app:layout_constraintEnd_toEndOf="@id/fourImageView"
        android:text="@string/one"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground" />

    <TextView
        android:id="@+id/twoImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/pin_card"
        app:layout_constraintStart_toStartOf="@id/fiveImageView"
        app:layout_constraintEnd_toEndOf="@id/fiveImageView"
        android:layout_marginTop="131dp"
        android:text="@string/two"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/threeImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/sixImageView"
        app:layout_constraintEnd_toEndOf="@id/sixImageView"
        app:layout_constraintTop_toTopOf="@id/twoImageView"
        app:layout_constraintBottom_toBottomOf="@id/twoImageView"
        android:text="@string/three"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/fourImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/pin_card"
        app:layout_constraintEnd_toStartOf="@id/fiveImageView"
        app:layout_constraintTop_toTopOf="@id/fiveImageView"
        app:layout_constraintBottom_toBottomOf="@id/fiveImageView"
        android:layout_marginStart="38dp"
        android:text="@string/four"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/fiveImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/twoImageView"
        app:layout_constraintBottom_toTopOf="@id/eightImageView"
        app:layout_constraintStart_toEndOf="@id/fourImageView"
        app:layout_constraintEnd_toStartOf="@id/sixImageView"
        android:text="@string/five"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/sixImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/fiveImageView"
        app:layout_constraintBottom_toBottomOf="@id/fiveImageView"
        app:layout_constraintStart_toEndOf="@id/fiveImageView"
        app:layout_constraintEnd_toEndOf="@id/pin_card"
        android:layout_marginEnd="38dp"
        android:text="@string/six"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/sevenImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fourImageView"
        app:layout_constraintEnd_toEndOf="@id/fourImageView"
        app:layout_constraintTop_toBottomOf="@id/fourImageView"
        app:layout_constraintBottom_toTopOf="@id/tenImageView"
        android:text="@string/seven"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/eightImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fiveImageView"
        app:layout_constraintEnd_toEndOf="@id/fiveImageView"
        app:layout_constraintTop_toBottomOf="@id/fiveImageView"
        app:layout_constraintBottom_toTopOf="@id/zeroImageView"
        android:text="@string/eight"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/nineImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/sixImageView"
        app:layout_constraintEnd_toEndOf="@id/sixImageView"
        app:layout_constraintTop_toTopOf="@id/eightImageView"
        app:layout_constraintBottom_toBottomOf="@id/eightImageView"
        android:text="@string/nine"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/tenImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/sevenImageView"
        app:layout_constraintEnd_toEndOf="@id/sevenImageView"
        app:layout_constraintTop_toTopOf="@id/zeroImageView"
        app:layout_constraintBottom_toBottomOf="@id/zeroImageView"
        android:text="@string/eight"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/zeroImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fiveImageView"
        app:layout_constraintEnd_toEndOf="@id/fiveImageView"
        app:layout_constraintBottom_toBottomOf="@id/pin_card"
        android:layout_marginBottom="45dp"
        android:text="@string/zero"
        android:textColor="#3B3A39"
        android:fontFamily="@font/geometria_bold"
        android:textSize="35sp"
        android:gravity="center"
        android:background="?android:selectableItemBackground"/>

    <ImageView
        android:id="@+id/eraseImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/sixImageView"
        app:layout_constraintEnd_toEndOf="@id/sixImageView"
        app:layout_constraintTop_toTopOf="@id/zeroImageView"
        app:layout_constraintBottom_toBottomOf="@id/zeroImageView"
        android:src="@drawable/ic_erase"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/create_pin"
        android:scaleType="centerInside"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        app:layout_constraintDimensionRatio="1.35:1"/>
</androidx.constraintlayout.widget.ConstraintLayout>