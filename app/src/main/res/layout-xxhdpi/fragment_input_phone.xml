<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.InputPhoneFragment"
    android:background="@drawable/background"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/sign_in_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="@string/signing"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/geometria_medium"
        android:textSize="19sp"
        android:gravity="center"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sign_in_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_top_radius_light"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/input_phone_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="37dp"
                android:layout_marginTop="42dp"
                android:text="@string/input_phone"
                android:fontFamily="@font/geometria_actual"
                android:textColor="#3B3A39"
                android:textSize="15sp"/>

            <AutoCompleteTextView
                android:id="@+id/phone_field"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="29dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_locked"
                android:drawableStart="@drawable/ic_uzbekistan"
                android:drawablePadding="16dp"
                android:fontFamily="@font/geometria_medium"
                android:hint="@string/phone_hint_uz"
                android:inputType="phone"
                android:maxLength="14"
                android:paddingHorizontal="24dp"
                android:textColor="#3B3A39"
                android:textColorHint="#DBDCEA"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_phone_text_view" />

            <TextView
                android:id="@+id/password_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/phone_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="37dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/geometria_actual"
                android:text="@string/password"
                android:textColor="#3B3A39"
                android:textSize="15sp"/>

            <RelativeLayout
                android:id="@+id/password_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/phone_field"
                app:layout_constraintStart_toStartOf="@id/phone_field"
                app:layout_constraintTop_toBottomOf="@+id/password_text_view"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp">

                <EditText
                    android:id="@+id/password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:autofillHints="@string/password"
                    android:background="@drawable/edit_text_locked"
                    android:fontFamily="@font/geometria_medium"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:paddingTop="4dp"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorLightGrey"
                    android:letterSpacing="0.25"
                    android:textSize="19sp" />

                <ImageView
                    android:id="@+id/password_eye_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/password_edit_text"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="7dp"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="10dp"
                    android:contentDescription="@string/password"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/forgot_password_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/password_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:layout_marginTop="34dp"
                android:text="@string/forgot_password"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#3B3A39"
                android:textSize="19sp"/>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="0dp"
                android:layout_height="65dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/btn_purple"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#fff"
                android:layout_margin="50dp"
                android:textSize="17sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>