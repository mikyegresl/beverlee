<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.FingerprintFragment"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/text_image_view"
        android:layout_width="0dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="56dp"
        android:src="@drawable/beverlee_text"
        android:contentDescription="@string/text_content_desc"/>

    <ImageView
        android:id="@+id/lock_image_view"
        android:layout_width="0dp"
        android:layout_height="31dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@id/text_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_locker"
        android:contentDescription="@string/fingerprint_text"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/lock_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@drawable/card_top_radius_light"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/fingerprint_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="68dp"
            android:gravity="center"
            android:text="@string/fingerprint_text"
            android:textColor="#3B3A39"
            android:fontFamily="@font/geometria_medium"
            android:textSize="19sp"/>

        <ImageView
            android:id="@+id/fingerprint_image_view"
            android:layout_width="0dp"
            android:layout_height="95dp"
            app:layout_constraintTop_toTopOf="@id/layout"
            app:layout_constraintBottom_toBottomOf="@id/layout"
            app:layout_constraintStart_toStartOf="@id/layout"
            app:layout_constraintEnd_toEndOf="@id/layout"
            android:src="@drawable/fingerprint_grey"
            android:contentDescription="@string/fingerprint_text"/>

        <TextView
            android:id="@+id/or_enter_pin_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="46dp"
            android:gravity="center"
            android:text="@string/or_enter_pin"
            android:textColor="#3B3A39"
            android:fontFamily="@font/geometria_medium"
            android:textSize="19sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>